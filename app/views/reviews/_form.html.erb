<div class="container">
  <h2>Upload review</h2>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <% if @review.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @review.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Upload", class: "btn btn-primary" %>
  <% end %>
</div>
