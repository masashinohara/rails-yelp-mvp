<div class="container">
  <div>
    <h2><%= @restaurant.name %></h2>

    <ul>
      <li>Category: <%= @restaurant.category %></li>
      <li>Address: <%= @restaurant.address %></li>
      <li>Phone number: <%= @restaurant.phone %></li>
    </ul>
    <%= link_to 'Edit', edit_restaurant_path(@restaurant) %> | <%= link_to 'Delete', restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>

  <div>
    <h3>Reviews</h3>

    <ul>
      <% @restaurant.reviews.each do |review| %>
        <li><%= review.content %> (<%= review.rating %>)</li>
      <% end %>
    </ul>

    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: Review::RATINGS %>
      <%= f.submit "Add a new review", class: "btn btn-primary" %>
    <% end %>
  </div>

  <%= link_to 'Home', restaurants_path %>

</div>
